package com.koreaIT.first.level5;

public class Calc {
	static int csum;
	static int rsum;
	static int asum;
	static float avg;
	
	public static void printSumAvg(int[][] score) {
		for(int j = 0; j < score.length; j++) {
			for(int i = 0; i < score.length; i++) {
				System.out.printf("%d\t", score[j][i]);
				rsum += score[j][i];
				
			}
			asum += rsum;
			avg = (float)(rsum)/score.length;
			System.out.printf("%d\t%.1f\n", rsum, avg);
			
			rsum = 0;
			avg = 0;
		}
		
		for(int j = 0; j < score.length; j++) {
			for(int i = 0; i < score.length; i++) {
				csum += score[i][j];
				
			}
			asum += csum;
			avg = (float)(csum)/score.length;
			System.out.printf("%d\t", csum);
			csum = 0;
		}
		System.out.println();
		System.out.printf("전체 합계 : %d\n", asum);
		System.out.printf("전체 평균 : %.1f\n", (float)asum/(score.length*score.length));
	}
	
	
}
