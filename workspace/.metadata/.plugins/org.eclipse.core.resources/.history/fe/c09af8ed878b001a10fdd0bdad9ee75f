import java.util.Scanner;

public class WhileMission {
	public static void main(String[] args) {
		
		String response;
		
		Scanner sc = new Scanner(System.in);
		
	
		
		while(response == "Y") {
			
			System.out.print("음악을 재생하시겠습니까? (Y)");
			response = sc.next();	
		
			System.out.println("음악을 1번 재생했습니다.");
		
		}
	}
}
