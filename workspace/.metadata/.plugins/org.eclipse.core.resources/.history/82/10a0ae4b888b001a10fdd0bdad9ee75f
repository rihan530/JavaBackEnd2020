import java.util.Scanner;

public class WhileMission {
	public static void main(String[] args) {
		
		String response;
		int check = 1;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("음악을 재생하시겠습니까? (Y)");
		response = sc.next();		
		
		while(response = "Y") {
			
			System.out.printf("음악을 %d번 재생했습니다.", check);
			check++;
		
		}
	}
}
